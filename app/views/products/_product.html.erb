<div class="col-sm-3 single-product-card" id=<%= product_path(product.id) %>>
  <div class="card">
    <div class="card-block">
      <h4 class="post-text">
        <%= truncate(product.name, :length => 60) %>
      </h4>
      <div class="product-content">
        <div class="posted-by"> Brand: <%= product.brand %></div>
        <h3><%= product.name %></h3> 
        <p><%= product.description %></p>
        <%= link_to "I'm interested", product_path(product.id), class: 'interested' %>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->